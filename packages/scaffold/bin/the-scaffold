'use strict'

const program = require('commander')
const pkg = require('../package')
const theScaffold = require('../lib')

program
  .version(pkg['version'])
  .usage('[options] <type> <dest> ')
  .description(pkg[ 'description' ])
  .option('-s, --silent', 'Disable console logs')
  .option('-f, --force', 'Force to generate')

// Show examples
program.on('--help', () => {
  console.log('  Examples:')
  console.log('')
  console.log('  $ the-scaffold component my-awesome-component   # Generate a component project')
  console.log('')
})

program.parse(process.argv)

// Run main command
theScaffold.apply(theScaffold, program.args.concat({
  silent: program['silent'],
  force: program['force']})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
