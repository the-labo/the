'use strict'
require = require('esm')(module)

const { pascalcase } = require('stringcase')
const { Scene } = require('@the-/templates')
const scopes = require('../store/scopes').default

const names = Object.keys(scopes)
  .filter((name) => !/^_/.test(name))
  .filter((name) => !/^abstract/.test(name))
  .map((name) => {
    const components = name.split('.')
    return pascalcase(components.slice(0, components.length - 1).join('_'))
  })
  .filter((v, i, arr) => arr.indexOf(v) === i)
  .filter(Boolean)

module.exports = names.map((name) => Scene({ cjs: true, name }))

if (!module.parent) {
  require('coz').render(__filename)
}
